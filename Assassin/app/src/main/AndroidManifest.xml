<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jhua.assassin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jhua.assassin.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jhua.assassin.TargetActivity"
            android:label="@string/title_activity_target" >
        </activity>
        <activity
            android:name="com.jhua.assassin.LeaderboardActivity"
            android:label="@string/title_activity_leader_board" >
        </activity>
        <activity
            android:name="com.jhua.assassin.StatsActivity"
            android:label="@string/title_activity_stats" >
        </activity>
        <activity
            android:name="com.jhua.assassin.FacebookActivity"
            android:label="@string/title_activity_facebook" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
